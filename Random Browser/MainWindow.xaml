<Window x:Class="Random_Browser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Random_Browser"
        mc:Ignorable="d"
        Title="Random Browser v1" Height="728" Width="1143">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="218*"/>
            <ColumnDefinition Width="124*"/>
            <ColumnDefinition Width="101*"/>
            <ColumnDefinition Width="692*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="browseButton" Content="Browse random!" HorizontalAlignment="Left" Margin="10,655,0,0" VerticalAlignment="Top" Width="124" Height="32" Click="browseButton_Click"/>
        <Button x:Name="saveButton" Content="Save image" HorizontalAlignment="Left" Margin="139,655,0,0" VerticalAlignment="Top" Width="124" Height="32" Click="saveButton_Click" Grid.ColumnSpan="2"/>
        <Image  x:Name="randomImage" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="640" Width="1115" Grid.ColumnSpan="4" RenderTransformOrigin="0.5,0.5"/>

    </Grid>
</Window>
